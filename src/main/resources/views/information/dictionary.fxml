<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import nl.avans.vsoprj2.wordcrex.controls.navigation.AppBar?>
<BorderPane fx:id="borderPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #ffbb00;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.avans.vsoprj2.wordcrex.controllers.information.DictionaryController">
    <top>
        <AppBar title="WoordenBoek" backButton="true" onBackButtonEvent="#handleBackButton"/>
    </top>
    <center>
        <VBox alignment="CENTER" fillWidth="false" spacing="10">
            <Label prefWidth="500" text="Username:" />
            <TextField prefWidth="500"/>
            <Label prefWidth="500" text="Woord:" />
            <TextField prefWidth="500" />
            <Label prefWidth="500" text="Toevoegen of Verwijderen:" />
            <RadioButton prefWidth="500" text="Toevoegen" />
            <RadioButton prefWidth="500" text="Verwijderen" />
            <Label prefWidth="500" text="Taal:" />
            <ComboBox prefWidth="500" promptText="Kies een taal" />
            <Label prefWidth="500" text="Comment:" />
            <TextField prefWidth="500"/>
            <Button prefWidth="500" text="Insturen" alignment="CENTER_LEFT" style="-fx-background-color: #1b1744;" textFill="white"/>
        </VBox>
    </center>
</BorderPane>
