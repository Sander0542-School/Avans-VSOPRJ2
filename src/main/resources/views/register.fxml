<?xml version="1.0" encoding="UTF-8"?>

<?import nl.avans.vsoprj2.wordcrex.controls.navigation.*?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.avans.vsoprj2.wordcrex.controllers.RegisterController">
    <top>
        <AppBar title="Registreren" optionsButton="false" backButton="true"/>
    </top>

    <center>
        <VBox>
            <VBox style="-fx-background-color: #201b53;">
                <HBox alignment="center" >
                    <children>
                        <ImageView fitHeight="200" fitWidth="200">
                            <image>
                                <Image url="@/images/icon.png" />
                            </image>
                        </ImageView>
                    </children>
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                </HBox>
            </VBox>

            <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: #ffbb00;">
                <children>
                    <VBox alignment="CENTER">
                        <VBox spacing="25" maxWidth="600" alignment="CENTER">
                            <children>
                                <TextField promptText="Gebruikersnaam" prefWidth="600"/>
                                <TextField promptText="Wacthwoord" prefWidth="600"/>
                                <TextField promptText="Wacthwoord (Herhaal)" prefWidth="600"/>
                                <Button prefWidth="600" prefHeight="50" style="-fx-background-color: #201b53; -fx-font-weight: bold" textFill="WHITE" text="Aanmelden" />
                            </children>
                        </VBox>
                    </VBox>
                </children>

                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
            </VBox>
        </VBox>
    </center>
</BorderPane>
