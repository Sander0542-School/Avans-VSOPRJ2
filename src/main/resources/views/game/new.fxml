<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import nl.avans.vsoprj2.wordcrex.controls.navigation.*?>

<?import nl.avans.vsoprj2.wordcrex.controls.games.SuggestedAccounts?>
<BorderPane fx:id="borderPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #201b53" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.avans.vsoprj2.wordcrex.controllers.game.NewController">
    <top>
        <VBox>
            <AppBar title="Start een nieuw spel" backButton="true"/>
            <AnchorPane prefHeight="208.0">
                <VBox alignment="CENTER_LEFT" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="16.0">
                    <Label text="Hoogste spelscore" textFill="WHITE">
                        <font>
                            <Font name="Roboto Black" size="30" />
                        </font>
                    </Label>
                    <Label text="0" textFill="WHITE">
                        <font>
                            <Font name="Roboto Black" size="30" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="8.0" AnchorPane.rightAnchor="16.0">
                    <Label text="Sterkte" textFill="WHITE">
                        <font>
                            <Font name="Roboto Black" size="30" />
                        </font>
                    </Label>
                    <Label text="1500" textFill="WHITE">
                        <font>
                            <Font name="Roboto Black" size="30" />
                        </font>
                    </Label>
                </VBox>
            </AnchorPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-background-color: #FFBB00;">
            <VBox alignment="CENTER" style="-fx-background-color: #FFBB00; -fx-padding: 10 20 10 20;">
                <Button onMouseClicked="#randomGameRequest" alignment="CENTER" prefWidth="250" style="-fx-background-color: #201b53;" text="Random tegenstander" textFill="WHITE">
                    <font>
                        <Font name="Roboto Black" size="16" />
                    </font>
                </Button>
            </VBox>

            <VBox alignment="CENTER">
                <ScrollPane style="-fx-background-color:transparent;" fitToWidth="true">
                    <VBox style="-fx-background-color: #FFBB00;" fx:id="suggestedAccountsContainer">

                    </VBox>
                </ScrollPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>
