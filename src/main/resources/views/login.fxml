<?xml version="1.0" encoding="UTF-8"?>

<?import nl.avans.vsoprj2.wordcrex.controls.navigation.*?>
<?import nl.avans.vsoprj2.wordcrex.controls.authentication.*?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.avans.vsoprj2.wordcrex.controllers.LoginController">
    <top>
        <AppBar title="Login" optionsButton="false" backButton="true"/>
    </top>

    <center>
        <VBox>
            <LogoBanner />

            <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: #ffbb00;">
                <children>
                    <VBox alignment="CENTER">
                        <VBox spacing="25" maxWidth="600" alignment="CENTER">
                            <children>
                                <TextField promptText="Gebruikersnaam" prefWidth="600"/>
                                <PasswordField promptText="Wachtwoord" prefWidth="600" />
                                <Button prefWidth="600" prefHeight="50" style="-fx-background-color: #201b53; -fx-font-weight: bold" textFill="WHITE" text="Inloggen" />
                            </children>
                        </VBox>
                    </VBox>
                </children>

                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
            </VBox>
        </VBox>
    </center>
</BorderPane>
