<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import nl.avans.vsoprj2.wordcrex.controls.scoreboard.RoundItem?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/10.0.2-internal" prefWidth="1280.0">
    <SplitPane dividerPositions="0.5" prefWidth="1280.0" style="-fx-background-color: #201b53;">
        <AnchorPane minHeight="0.0" minWidth="0.0" style="-fx-background-color: #201b53;">
            <VBox spacing="10.0">
                <HBox alignment="CENTER" maxHeight="-Infinity" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0"
                      style="-fx-background-color: #1b1744;">
                    <Label textFill="white" text="Ronde #">
                        <font>
                            <Font name="Roboto Black" size="14.0"/>
                        </font>
                    </Label>
                    <Label textFill="white" fx:id="roundLabel">
                        <font>
                            <Font name="Roboto Black" size="14.0"/>
                        </font>
                    </Label>
                </HBox>
                <RoundItem fx:id="playerOne"/>
            </VBox>
        </AnchorPane>
        <AnchorPane style="-fx-background-color: #201b53;">
            <VBox spacing="10.0">
                <HBox alignment="CENTER" maxHeight="-Infinity" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0"
                      style="-fx-background-color: #1b1744;">
                    <Label textFill="white" text="Gebruikte letters: ">
                        <font>
                            <Font name="Roboto Black" size="14.0"/>
                        </font>
                    </Label>
                    <Label textFill="white" fx:id="letterSetLabel">
                        <font>
                            <Font name="Roboto Black" size="14.0"/>
                        </font>
                    </Label>
                </HBox>
                <RoundItem fx:id="playerTwo"/>
            </VBox>
        </AnchorPane>
    </SplitPane>
</fx:root>
