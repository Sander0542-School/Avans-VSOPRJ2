<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/10.0.2-internal">
    <children>
        <HBox style="-fx-background-color: #201b53;">
            <children>
                <VBox>
                    <children>
                        <HBox>
                            <Label textFill="white" fx:id="nameLabel"/>
                            <Label textFill="white" fx:id="wordLabel"/>
                        </HBox>
                        <HBox>
                            <Label textFill="white" fx:id="timeLabel"/>
                            <Label textFill="white" fx:id="scoreLabel"/>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</fx:root>

